<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:DivoomPcMonitorTool.UI.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="DivoomPcMonitorTool.UI.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="DivoomPcMonitorTool.UI"
        Height="450"
        Width="800">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <DockPanel>
        <!-- Classic top menu -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="Settings" Command="{Binding SettingsCommand}"/>
                <Separator/>
                <MenuItem Header="Exit" Command="{Binding ExitCommand}"/>
            </MenuItem>
        </Menu>
        <!-- Bottom status bar -->
        <Border DockPanel.Dock="Bottom" Padding="6">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <!-- small speech-bubble style icon placeholder -->
                <TextBlock Text="Davoom" Margin="0,0,8,0" VerticalAlignment="Center"/>
                <TextBlock Text="{Binding StatusText}" VerticalAlignment="Center"/>

                <ProgressBar Width="200" Height="14" Margin="12,0,0,0" Minimum="0" Maximum="100" Value="{Binding Progress}" IsVisible="{Binding IsBusy}"/>
            </StackPanel>
        </Border>

        <!-- Main content stays centered -->
       <!-- <TextBlock Text="{Binding Greeting}" HorizontalAlignment="Center" VerticalAlignment="Center"/>-->
        <Border DockPanel.Dock="Top">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="10">
                <Border DockPanel.Dock="Left" Padding="10" IsVisible="True">
                    <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="10">
                        <TextBlock Text="{Binding _lcdMsg}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <StackPanel Orientation="Vertical"
                                    Spacing="16">
                            <RadioButton IsChecked="True">_Option 1</RadioButton>
                            <RadioButton>O_ption 2</RadioButton>
                            <RadioButton IsChecked="{x:Null}">Op_tion 3</RadioButton>
                            <RadioButton IsEnabled="False">Disabled</RadioButton>
                        </StackPanel>
                    </StackPanel>
                </Border>
                <Border DockPanel.Dock="Left" BorderThickness="1" BoxShadow="">
                    <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="10">
                        <TextBlock  Text="{Binding _deviceListMsg}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <StackPanel Orientation="Vertical"
                                    Spacing="16">
                            <RadioButton IsChecked="True">_Option 1</RadioButton>
                            <RadioButton>O_ption 2</RadioButton>
                            <RadioButton IsChecked="{x:Null}">Op_tion 3</RadioButton>
                            <RadioButton IsEnabled="False">Disabled</RadioButton>
                        </StackPanel>
                    </StackPanel>
                </Border>
                <Border DockPanel.Dock="Left">
                    <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="10">
                        <TextBlock Text="{Binding _hardwareInfo}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <ItemsControl ItemsSource="{Binding HardwareInfos}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <!-- small status dot instead of radio -->
                                        <Ellipse Width="10" Height="10"
                                                 Stroke="Gray"
                                                 Fill="{Binding IsActive}" />
                                        <TextBlock Text="{Binding Name}" />
                                        <TextBlock Text="{Binding Value}" Margin="8,0,0,0"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>


    </DockPanel>

</Window>
