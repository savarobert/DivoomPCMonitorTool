<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:DivoomPcMonitorTool.UI.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="DivoomPcMonitorTool.UI.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="DivoomPcMonitorTool.UI"
        Height="450"
        Width="800">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainWindowViewModel/>
    </Design.DataContext>

  <DockPanel>

        <!-- Top menu -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="Settings" Command="{Binding SettingsCommand}" />
                <Separator />
                <MenuItem Header="Exit" Command="{Binding ExitCommand}" />
            </MenuItem>
        </Menu>

        <!-- Bottom status bar -->
        <Border DockPanel.Dock="Bottom" Padding="6">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Spacing="8">
                <TextBlock Text="Davoom" VerticalAlignment="Center" />
                <TextBlock Text="{Binding StatusText}" VerticalAlignment="Center" />

                <ProgressBar Width="200"
                             Height="14"
                             Margin="12,0,0,0"
                             Minimum="0"
                             Maximum="100"
                             Value="{Binding Progress}"
                             IsVisible="{Binding IsBusy}" />
            </StackPanel>
        </Border>

        <!-- Refresh button placed above the status bar and centered -->
        <Button DockPanel.Dock="Bottom"
                Content="Refresh"
                Command="{Binding RefreshCommand}"
                HorizontalAlignment="Center"
                Width="100"
                Margin="0,8" />

        <!-- Main content area -->
        <Border Margin="32"
                Background="{DynamicResource ThemeBackgroundBrush}"
                CornerRadius="8"
                Padding="24">
            <Grid ColumnDefinitions="*,24,*,24,*">

                <!-- LCD Displays -->
                <HeaderedContentControl Header="{Binding LcdMessage}"
                                        Grid.Column="0"
                                        Padding="12" IsVisible="{Binding ShowLcd}">
                    <StackPanel Spacing="12">
                        <StackPanel Spacing="8">
                            <ListBox ItemsSource="{Binding LcdList}" />
                        </StackPanel>
                    </StackPanel>
                </HeaderedContentControl>

                <!-- Divoom Devices on LAN -->
                <HeaderedContentControl Header="{Binding DeviceListMessage}"
                                        Grid.Column="2"
                                        Padding="12">
                    <StackPanel Spacing="12">
                        <StackPanel Spacing="8">
                            <StackPanel Spacing="8">
                                <ListBox ItemsSource="{Binding DevicesListBox}" SelectedItem="{Binding SelectedDevice, Mode=TwoWay}">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                <TextBlock Text="{Binding Name}" />
                                                <TextBlock Text="{Binding Ip}" Foreground="Gray" />
                                            </StackPanel>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </HeaderedContentControl>

                <!-- Hardware info (read-only) -->
                <HeaderedContentControl Header="{Binding HardwareInfoMessage}"
                                        Grid.Column="4"
                                        Padding="12">
                    <StackPanel Spacing="8">
                        <ItemsControl ItemsSource="{Binding HardwareInfos}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Spacing="6">
                                        <TextBlock Text="{Binding Name}"
                                                   FontWeight="SemiBold" />
                                        <TextBlock Text="{Binding Value}"
                                                   Foreground="Gray" />
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </HeaderedContentControl>

            </Grid>
        </Border>

    </DockPanel>

</Window>
