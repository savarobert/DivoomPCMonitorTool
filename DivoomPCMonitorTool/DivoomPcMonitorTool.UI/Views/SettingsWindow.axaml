<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="DivoomPcMonitorTool.UI.Views.SettingsWindow"
        Title="Settings"
        Width="400" Height="300">

    <StackPanel Margin="10">
        <TextBlock Text="Settings" FontWeight="Bold" Margin="0,0,0,10"/>
        <TextBlock Text="(Settings UI placeholder)"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Name="OkButton" Content="OK" Width="80" IsDefault="True"/>
            <Button Name="CancelButton" Content="Cancel" Width="80" Margin="10,0,0,0" IsCancel="True"/>
        </StackPanel>
    </StackPanel>

</Window>